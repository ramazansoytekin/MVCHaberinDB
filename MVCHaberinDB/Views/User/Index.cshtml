@model IEnumerable<MVCHaberinDB.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div id="Container">
    <div id="TopBar">
    </div>
    <div id="Content">


        <table>
            <tr>
                <th>
                    @Html.DisplayName("Ad")
                </th>
                <th>
                    @Html.DisplayName("Soyad")
                </th>
                <th>
                    @Html.DisplayName("Adres")
                </th>
                <th>
                    @Html.DisplayName("Şehir")
                </th>
                <th>
                    @Html.DisplayName("Posta Kodu")
                </th>
                <th>
                    @Html.DisplayName("Ülke")
                </th>
                <th>
                    @Html.DisplayName("Telefon")
                </th>
                <th>
                    @Html.DisplayName("Fax")
                </th>
                <th>
                    @Html.DisplayName("E-Mail")
                </th>
                <th>
                    @Html.DisplayName("Şifre")
                </th>
                <th>
                    @Html.DisplayName("Resim")
                </th>
                <th>
                    @Html.DisplayName("Üyelik Tarihi")
                </th>
                <th>
                    @Html.DisplayName("Doğum Tarihi")
                </th>
                <th>
                    @Html.DisplayName("Rol")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fax)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        <img src="~/Content/images/userPhotos/@item.ImagePath" style="width:150px; height:120px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MembershipDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.RoleName)
                    </td>
                    <td>
                        @Html.ActionLink("Detay", "Details", new { id = item.UserID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>