@model IEnumerable<MVCHaberinDB.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="Container">
    <div id="TopBar">
    </div>
    <div id="Content">

        <p>
            @Html.ActionLink("Kategori Ekle", "Create")
        </p>
        <table>
            <tr>
                <th>
                    @Html.DisplayName("Adı")
                </th>
                <th>
                    @Html.DisplayName("Açıklama")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.CategoryID }) |
                        @Html.ActionLink("Detay", "Details", new { id = item.CategoryID }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.CategoryID })
                    </td>
                </tr>
            }

        </table>
    </div>

</div>