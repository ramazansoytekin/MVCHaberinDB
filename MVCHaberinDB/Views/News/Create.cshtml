@model MVCHaberinDB.Models.News

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="Container">
    <div id="TopBar">
    </div>
    <div id="KayitAlan">

        @using (Html.BeginForm("Create", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <legend>Haber</legend>

                <div class="editor-label">
                    @Html.Label("Başlık:")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.NewsTitle)
                    @Html.ValidationMessageFor(model => model.NewsTitle)
                </div>

                <div class="editor-label">
                    @Html.Label("Açıklama:")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.NewsDescription)
                    @Html.ValidationMessageFor(model => model.NewsDescription)
                </div>

                <div class="editor-label">
                    @Html.Label("İçerik:")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.NewsContent)
                    @Html.ValidationMessageFor(model => model.NewsContent)
                </div>

                <div class="editor-label">
                    @Html.Label("Kategori:")
                </div>
                <div class="editor-field">
                    @Html.DropDownList("CategoryID", String.Empty)
                    @Html.ValidationMessageFor(model => model.CategoryID)
                </div>

                <div class="editor-label">
                    @Html.Label("Ajans:")
                </div>
                <div class="editor-field">
                    @Html.DropDownList("SupplierID", String.Empty)
                    @Html.ValidationMessageFor(model => model.SupplierID)
                </div>

                <div class="editor-label">
                    @Html.Label("Resim Seç:")
                </div>
                <div class="editor-field">
                    <input name="fluResim" type="file" />
                </div>

                <div class="editor-label">
                    @Html.Label("Manşet:")
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.isBigNew)
                    @Html.ValidationMessageFor(model => model.isBigNew)
                </div>

                <p>
                    <input type="submit" value="Kaydet" />
                </p>
            </fieldset>
        }

        <div>
            @Html.ActionLink("Index'e Dön", "Index")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>
