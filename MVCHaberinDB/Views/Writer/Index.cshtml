@model IEnumerable<MVCHaberinDB.Models.Writer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<div id="Container">
    <div id="TopBar">
    </div>
    <div id="Content">

        <p>
            @Html.ActionLink("Yazar Ekle", "Create")
        </p>
        <table>
            <tr>
                <th>
                    @Html.DisplayName("Adı")
                </th>
                <th>
                    @Html.DisplayName("Soyadı")
                </th>
                <th>
                    @Html.DisplayName("Resim")
                </th>
                <th>
                    @Html.DisplayName("Adres")
                </th>
                <th>
                    @Html.DisplayName("E-Mail")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <img src="~/Content/images/writerPhotos/@item.ImagePath" style="width:150px; height:120px;" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Düzenle", "Edit", new { id = item.WriterID }) |
                        @Html.ActionLink("Detay", "Details", new { id = item.WriterID }) |
                        @Html.ActionLink("Sil", "Delete", new { id = item.WriterID })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>